{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "selector-class-pattern": "^[a-z0-9\\-_]+$",
    "color-hex-length": "short",
    "scss/dollar-variable-pattern": "^[a-z0-9\\-]+$"
  }
}
